---
import BaseHead from "../components/Head.astro";
import BaseLeft from "../components/Left.astro";
import BaseFoot from "../components/Foot.astro";
import Demand from "../components/items/Demand.astro";

const { pageIndex } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta itemprop="name" content="陆永剑的出海站点 - 首页" />
    <meta
      name="keywords"
      itemprop="keywords"
      content="独立开发者,技术出海,工具出海,技术出海导航,程序员导航"
    />
    <meta
      name="description"
      itemprop="description"
      content="陆永剑的出海站点"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="shortcut icon"
      href="/image/logo.png"
      rel="external nofollow"
      type="image/png"
    />
  </head>

  <body class="bg-slate-50">
    <!--header-->
    <BaseHead />

    <!--container-->
    <div class="container mx-auto">
      <div class="flex flex-wrap">
        <BaseLeft pageIndex={pageIndex} />
        <div class="w-full lg:w-5/6 md:w-3/4">
          <slot />
        </div>
      </div>
      <!-- <BaseFoot /> -->
    </div>

    <script is:inline src="https://code.jquery.com/jquery-3.7.0.min.js"
    ></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-S4YP5VJ3Z3"
    ></script>

    <script>
      import "../scripts/tongji.js";
    </script>
  </body>
</html>
